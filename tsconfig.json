{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
